{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom", "dom.iterable"],
    "noImplicitAny": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "experimentalDecorators": true,
    "baseUrl": "./src/",
    "paths": {
      "common": ["common"],
      "screens": ["screens"],
      "components": ["components"],
      "navigation": ["navigation"],
      "services": ["services"],
      "store": ["store"],
      "reducers": ["reducers"],
      "actions": ["actions"],
      "themes": ["themes"],
      "models": ["models"],
      "helpers": ["helpers"],
      "utils": ["utils"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
